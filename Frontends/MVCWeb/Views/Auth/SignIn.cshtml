
@{
    ViewData["Title"] = "SignIn";

}
@model SigninInput

<form asp-controller="Auth" asp-action="SignIn" method="post">
    <h5 class="card-title">Üye Giriş</h5>
    <div class="alert alert-danger d-flex align-items-center" asp-validation-summary="ModelOnly" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" value="serkanyurttapan" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" aria-describedby="emailHelp" class="form-control">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" value="Database1.!" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password"></span>

        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <div class="form-check">
                <input asp-for="IsRemember" class="form-check-input" type="checkbox">
                <label asp-for="IsRemember" class="form-check-label">
                    <span asp-validation-for="IsRemember"></span>
                </label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>
