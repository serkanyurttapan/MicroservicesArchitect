
@model BasketViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">

        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Sepet</h5>
                @if (Model != null && Model.BasketItems.Any())
                {
                    <table class="table table-striped">

                        <tr>
                            <th>Kurs isim</th>
                            <th>Kurs fiyat</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var basketViewModel in Model.BasketItems)
                        {
                            <tr>
                                <td>@basketViewModel.CourseName</td>
                                <td>@basketViewModel.GetCurrentPrice TL</td>
                                <td>
                                    <a class="btn btn-danger" asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-courseId="@basketViewModel.CourseId">
                                        Sil
                                    </a>

                                </td>
                            </tr>
                        }
                        @if (Model.HasDiscount)
                        {
                            <tr>
                                <td>Indirim Oranı</td>
                                <th colspan="2">% @Model.DiscountRate</th>
                            </tr>
                        }
                        <tr>
                            <td>
                                @(Model.HasDiscount ? "indirimli fiyat": "toplam fiyat")
                            </td>
                            <th colspan="2">
                                @Model.TotalPrice TL
                            </th>
                        </tr>

                    </table>

                }
            </div>
        </div>




    </div>

</div>