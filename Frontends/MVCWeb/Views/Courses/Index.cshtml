
@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">kurs oluştur</a>
                    @if (Model.Any())
                    {
                        <h5>Kurslar</h5>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Resim
                                    </th>
                                    <th>
                                        Kurs isim
                                    </th>
                                    <th>
                                        Fiyat
                                    </th>
                                    <th>
                                        Süre
                                    </th>
                                    <th>
                                        İşlemler
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model)
                                {
                                <tr>
                                    <td>
                                        @course.Picture
                                    </td>
                                    <td>
                                        @course.Name
                                    </td>
                                    <td>
                                        @course.Price
                                    </td>
                                    <td>
                                        @course.CreatedTime
                                    </td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Update" asp-route-id="@course.Id" class="btn btn-success btn-sm">Güncelle</a>
                                    
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <span class="alert alert-info">
                            Kayıt bulunamadı
                        </span>
                    }
                </div>
            </div>

        </div>

    </div>

</div>
