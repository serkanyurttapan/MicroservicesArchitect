
@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    @if (Model.Any())
                    {

                        <h5>Kurslar</h5>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Resim
                                    </th>
                                    <th>
                                        Kurs isim
                                    </th>
                                    <th>
                                        Fiyat
                                    </th>
                                    <th>
                                        Süre
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model)
                                {
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                            @course.Name
                                        </td>
                                        <td>
                                            @course.Price
                                        </td>
                                        <td>
                                            @course.CreatedTime
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <span class="alert alert-info">
                            Kayıt bulunamadı
                        </span>
                    }
                </div>
            </div>

        </div>

    </div>

</div>
